{
  "port": 9900,
  "pretty_json": true,
  "endpoints": [
    {
      "path": "/",
      "methods": {
        "GET": {
          "type": "shell",
          "config": {
            "output":"raw",
            "commands": [
              {
                "command": "date +%F | sed 's/^/AA-/g' ; echo"
              },
              {
                "command": "pwd"
              }
            ]
          }
        }
      }
    },
    {
      "path": "/env",
      "methods": {
        "GET": {
          "type": "shell",
          "config": {
            "output":"raw",
            "commands": [
              {
                "command": "env"
              }
            ]
          }
        }
      }
    },
    {
      "path": "/body/{bla:.*}",
      "methods": {
        "POST": {
          "query_params": {
              "params": [{
                  "name": "aaa",
                  "regexp": "^.*$",
                  "default": ""
              }]
          },                
          "type": "shell",
          "config": {
            "output":"raw",
            "commands": [
              {
                "command": "echo 'url>{{.url}}<'"
              },
              {
                "command": "echo 'query>{{.query}}<'"
              },
              {
                "command": "echo 'request >{{.request}}<'"
              },
              {
                "command": "echo 'request method >{{.request.method}}<'"
              },
              {
                "command": "echo 'request body>{{.request.body}}<'"
              }
            ]
          }
        }
      }
    },
    {
      "path": "/stderr",
      "methods": {
        "GET": {
          "type": "shell",
          "config": {
            "output":"raw",
            "commands": [
              {
                "command": "echo EEE >&2; echo FFF"
              }
            ]
          }
        }
      }
    },
    {
      "path": "/hello/{foo:.*}",
      "methods": {
        "GET": {
          "type": "shell",
          "config": {
            "output":"raw",
            "commands": [
              {
                "command": "echo \"- {{.url.foo}} -\""
              }
            ]
          }
        }
      }
    }
  ]
}
